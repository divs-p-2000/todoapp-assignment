extends layout

block content
    header(class='jumbotron')
      div(class='container')
        div(class='col-12 col-sm-6')
          h1 Task Tracker
          p Welcome #{user.name}
        div(class='col-12 col-sm')

    div(class='container')
        div(class='row row-content')
            div(class='col-12')
                h2 Create a new task!
            div(class='col-12')
                form(method='POST' action='')
                    div(class='form-group row')
                        label(for='title' class='col-md-2 col-form-label') Title (required)
                        div(class='col-md-4')
                            input(type='text' class='form-control' id='title' name='title' placeholder='Title')
                        label(for='due' class='col-md-2 col-form-label') Date (required)
                        div(class='col-md-4')
                          input(type='date' class='form-control' id='date' name='date')
                    div(class='form-group row')
                        label(for='description' class='col-md-2 col-form-label') Description
                        div(class='col-md-10')
                          input(type='text' class='form-control' id='description' name='description' placeholder='Description')
                    div(class='form-group row')
                        div(class='offset-md-2 col-md-10')
                          button(type='submit' class='btn btn-success') Create Task
        hr
        div(class='row row-content')
            div(class='col-12')
                h2 Your current tasks
            div(class='col-12')
                ul(style='list-style-type: none')
                    for task in tasks
                        li
                            div(class='card')
                                div(class='card-header row')
                                    div(class='col-4')
                                        h3 #{task.title}
                                    div(class='col-4')
                                        p
                                            em Due on #{task.date}
                                    div(class='col-4')
                                        a(href=task.deleteRoute class='btn btn-danger mr-auto') Delete
                                div(class='card-body')
                                    p  #{task.description}
